<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@color/colorPrimaryDark"
    android:padding="5dp"
    android:layout_gravity="center">
    
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/ic_headDetail"
                android:src="@drawable/ic_keranjang"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:tint="@color/white"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/head_detailCategory"
                android:layout_below="@id/ic_headDetail"
                android:text="Kategori 1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_detailCategory"
                android:layout_below="@+id/head_detailCategory"
                android:layout_marginTop="10dp"
                android:text="@string/exampleDetailCategory"
                android:textAlignment="center"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_close"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Close"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textStyle="italic"
            android:textColor="@color/white"/>

    </android.support.constraint.ConstraintLayout>



</LinearLayout>